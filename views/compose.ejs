
<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <h2> Welcome <%=name%> </h2>
    <form class="" action="/compose" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <h3>Title</h3>
        <br>
        <input class="form-control" type="text" name="postTitle" required>
        <!-- <label>Post</label> -->
        <h3>Post</h3>
        <br>
        <textarea class="form-control" name="postBody" rows="5" cols="30" required></textarea>
        <!-- <label for="image">Upload Image</label> -->
        <h4>Upload related image</h4>
                <input type="file" id="image"
                       name="image" value="" required>
      </div>


      <button class="btn btn-primary" type="submit" name="button" value=<%=name%> >Publish</button>
    </form>
    

<%- include("partials/footer"); -%>
